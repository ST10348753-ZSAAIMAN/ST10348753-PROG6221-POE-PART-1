<Window x:Class="ST10348753_PROG6221_POE_PART_2.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe Name" Margin="10"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="10"/>

            <TextBlock Text="Number of Ingredients" Margin="10"/>
            <TextBox x:Name="NumIngredientsTextBox" Margin="10"/>

            <Button Content="Add Recipe" Click="AddRecipeButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
