<Window x:Class="ST10348753_PROG6221_POE_PART_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe Application" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="1. Add Recipe" Name="AddRecipeButton" Click="AddRecipe_Click" Margin="10"/>
            <Button Content="2. Display a Specific Recipe" Name="DisplayRecipeButton" Click="DisplayRecipe_Click" Margin="10"/>
            <Button Content="3. View All Recipes" Name="ViewAllRecipesButton" Click="ViewAllRecipes_Click" Margin="10"/>
            <Button Content="4. Scale a Recipe" Name="ScaleRecipeButton" Click="ScaleRecipe_Click" Margin="10"/>
            <Button Content="5. Reset Ingredient Quantities" Name="ResetQuantitiesButton" Click="ResetQuantities_Click" Margin="10"/>
            <Button Content="6. Clear a Recipe" Name="ClearRecipeButton" Click="ClearRecipe_Click" Margin="10"/>
            <Button Content="7. Exit" Name="ExitButton" Click="Exit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
